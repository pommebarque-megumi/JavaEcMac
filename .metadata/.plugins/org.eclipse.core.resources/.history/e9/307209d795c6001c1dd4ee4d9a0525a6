package day3;

public class PersonApp {

	public static void main(String[] args) {

		Person p=new Person();
		try {
			p.setAge(-2);
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}

}
class Person{
	int age;
	public void setAge(int age) {
		if(age<0) {
			throw new IllegalArgumentException("年齢は０以上でお願いします");
		}
	}
}